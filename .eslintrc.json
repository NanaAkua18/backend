{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "rules": {
    "import/extensions": ["error", "ignorePackages", { "js": "always" }],
    "quotes": ["error", "double"],
    "no-console": "warn",
    "no-mixed-spaces-and-tabs": "error",
    "indent": ["error", "tab"],
    "no-tabs": 0,
    "no-underscore-dangle":  ["error", { "allow": ["_id", "_doc"] }]
  }
}
